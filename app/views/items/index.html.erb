<center>
  <h1>ALL ITEMS</h1>
  <div class="items">
    <table class="table">
      <thead class= 'thead-dark'>
        <style>
          .items {
        position: relative;
        height: 500px;
        width: 1000px;
        overflow: auto;
        }
        .items {
        display: block;
        }
        </style>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Warehouse</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <% if params[:edit] && (item.id == params[:id].to_i) %>
            <div class="edit_form">
              <%= form_with model: item, local: true do |f| %>
                <th scope="row"><%= f.text_field :name, value: item.name %>
                <th scope="row"><%= f.text_field :description, value: item.description %>
                <th scope="row"><%= f.collection_select :warehouse_id, Warehouse.order(:name),:id,:name, include_blank: true , value: item.warehouse_id %><br><br>
                <th scope="row"><%= f.submit "Update Item", method: :update  %>
              <% end %>
            </div>
          <% else %>
            <th scope="row"><%= item.name %></th>
            <th scope="row"><%= item.description %></th>
            <% if item.warehouse.nil? %>
              <%= form_with model: item, action: 'patch', local: true do |f| %>
                  <th scope="row"><%= f.collection_select :warehouse_id, Warehouse.order(:id), :id,:name,include_blank: false %>
                                  <%= button_to "Assign" %></th>
              <% end %>
            <% else %>
              <th scope="row"><%= item.warehouse.name %></th>
            <% end %>
              <th scope="row"><%= button_to "Edit", edit_item_path(item), method: :get %></th>
              <th scope="row"><%= button_to "Delete", item_path(item), method: :delete %></th>
          <% end %>
        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
